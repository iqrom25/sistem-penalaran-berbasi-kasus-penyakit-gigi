@model IEnumerable<PBK_dita.Models.Penyakit>

@{
    ViewData["Title"] = "Penyakit";
    ViewData["controller"] = "Admin";
    ViewData["action"] = "Data Penyakit";
    Layout = "_LayoutAdmin";
}


<div class="card mb-4">
    <div class="card-header"><strong>Data Penyakit</strong></div>
    <div class="card-body">
        <a asp-action="TambahPenyakit" asp-controller="Admin" class="btn btn-primary mb-3"><i class="bi bi-plus-lg"></i> Tambah Data</a>
        <table id="table" class="table table-striped" style="width:100%">
            <thead>
            <tr>
                <th>No</th>
                <th>@Html.DisplayNameFor(model => model.KodePenyakit)</th>
                <th>@Html.DisplayNameFor(model => model.Nama)</th>
                <th>@Html.DisplayNameFor(model => model.Gambar)</th>
                <th>@Html.DisplayNameFor(model => model.Deskripsi)</th>
                <th>@Html.DisplayNameFor(model => model.Solusi)</th>
                <th>Aksi</th>
            </tr>
            </thead>
            @{
                if (Model.Count() > 0)
                {
                    int i = 1;
                    <tbody>
                    
                    @foreach (var penyakit in Model)
                    {<tr>
                         <td>@i</td>
                         <td>@penyakit.KodePenyakit</td>
                         <td>@penyakit.Nama</td>
                         <td><img class="img-thumbnail" width="200" src="~/img/penyakit/@penyakit.Gambar" alt="gambar-penyakit"/></td>
                         <td>@penyakit.Deskripsi</td>
                         <td>@penyakit.Solusi</td>
                         <td>
                             <div class="d-flex">
                                 <a class="btn btn-warning" asp-action="EditPenyakit" asp-route-id="@penyakit.Id">
                                     <i class="bi bi-pencil-square"></i>
                                 </a>
                             
                                 @* ada bug waktu kirim id lewat asp-route, jd diakalin paka js aja *@
                                 <button class="btn btn-danger ms-2" onclick="onDeleteClick(@penyakit.Id,'Penyakit')">
                                     <i class="bi bi-trash3"></i>
                                 </button>

                             </div>
                         </td>
                     </tr>
                        i++;
                    }
                   
                    </tbody>
                }
            }

        </table>
    </div>
</div>




