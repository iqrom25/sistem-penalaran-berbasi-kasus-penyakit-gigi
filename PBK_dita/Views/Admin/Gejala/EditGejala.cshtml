@model PBK_dita.Models.Gejala

@{
    ViewData["Title"] = "Edit Gejala";
  ViewData["controller"] = "Admin";
  ViewData["action"] = "Data Gejala";
    Layout = "_LayoutAdmin";
}

<div class="card mb-4">
    <div class="card-header"><strong>Edit Data Gejala</strong></div>
    <div class="card-body">
        <form asp-action="EditGejala" method="POST">
            <div class="row mb-3">
                <label asp-for="KodeGejala" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" asp-for="KodeGejala">
                    <span asp-validation-for="KodeGejala" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Nama" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" asp-for="Nama">
                    <span asp-validation-for="Nama" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" name="kodeLama" value="@Model.KodeGejala"/>
            <button type="submit" class="btn btn-primary">Ubah</button>
            <a asp-action="Gejala" class="btn btn-primary">Kembali</a>
        </form>
    </div>
</div>